pipeline { 
    environment {
        registry = "pvishnu/node-hello"
        registryCredential = 'DockerHub_Credentials'
        dockerImage = ''
        PATH = "/usr/local/bin/:$PATH"
    }
    agent any 
    stages {
        stage('Cloning our Git') {
            steps {
                git 'https://github.com/vishnu4b3/node-hello.git'
            }
        } 
        stage('Building our image') {
            steps {
                script {
                    echo "path is: $PATH" 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Deploy our image') {
            steps {
                script {
                       sh "docker push pvishnu/node-hello:${BUILD_NUMBER}"
                    }
                }
            }
        stage('creating a container using Ansible playbook') {
            steps {
                script {
                      sh  'sudo ansible-playbook dockerplaybook.yaml --extra-vars "docker_image_name=pvishnu/node-hello:${BUILD_NUMBER}"'
                    }
                }
            }    
    }
}
